{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ 'article.add' | trans }}</h1>
        {{ form_start(formArticle) }}
        <div class="form-row">
            <div class="form-label">{{ form_label(formArticle.username) }}</div>
            <div class="form-errors">{{ form_errors(formArticle.username) }}</div>
            <div class="form-widget">{{ form_widget(formArticle.username) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(formArticle.email) }}</div>
            <div class="form-errors">{{ form_errors(formArticle.email) }}</div>
            <div class="form-widget">{{ form_widget(formArticle.email) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(formArticle.password.first) }}</div>
            <div class="form-errors">{{ form_errors(formArticle.password.first) }}</div>
            <div class="form-widget">{{ form_widget(formArticle.password.first) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(formArticle.password.second) }}</div>
            <div class="form-errors">{{ form_errors(formArticle.password.second) }}</div>
            <div class="form-widget">{{ form_widget(formArticle.password.second) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">
                {{ form_widget(formArticle.isAdmin) }}
                {{ form_label(formArticle.isAdmin) }}
            </div>
            <div class="form-errors">{{ form_errors(formArticle.isAdmin) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(formArticle.avatar) }}</div>
            <div class="form-errors">{{ form_errors(formArticle.avatar) }}</div>
            <div class="form-widget">{{ form_widget(formArticle.avatar) }}</div>
        </div>
        <div>
            <a href="{{app.request.headers.get('referer')}}" class="return-btn"><i class="fa fa-arrow-left" ></i>&nbsp{{ 'return' | trans }}</a>
            {{ form_widget(formArticle.save, { 'label': 'save_form' }) }}
        </div>
        {{ form_end(formArticle) }}
    </div>
{% endblock %}
