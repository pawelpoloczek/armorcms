{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/plugins/ckeditor/ckeditor5.css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="importmap">
        {
            "imports": {
                "ckeditor5": "/assets/plugins/ckeditor/ckeditor5.js",
                "ckeditor5/": "/assets/plugins/ckeditor/"
            }
        }
    </script>
    <script type="module" src="/assets/plugins/ckeditor/init.js"></script>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'textblock.add' | trans }}</h1>
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-label">{{ form_label(form.blockKey) }}</div>
            <div class="form-errors">{{ form_errors(form.blockKey) }}</div>
            <div class="form-widget">{{ form_widget(form.blockKey) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">
                {{ form_widget(form.isActive) }}
                {{ form_label(form.isActive) }}
            </div>
            <div class="form-errors">{{ form_errors(form.isActive) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.content) }}</div>
            <div class="form-errors">{{ form_errors(form.content) }}</div>
            <div class="form-widget">
                {{ form_widget(form.content, { 'id': 'editor' }) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.description) }}</div>
            <div class="form-errors">{{ form_errors(form.description) }}</div>
            <div class="form-widget">{{ form_widget(form.description) }}</div>
        </div>
        <div>
            <a href="{{app.request.headers.get('referer')}}" class="return-btn"><i class="fa fa-arrow-left" ></i>&nbsp{{ 'return' | trans }}</a>
            {{ form_widget(form.save, { 'label': 'save_form' }) }}
        </div>
        {{ form_end(form, {render_rest: false}) }}
    </div>
{% endblock %}
