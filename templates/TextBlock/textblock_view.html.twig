{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ 'textblock.preview' | trans }}</h1>
        <div class="preview-row">
            <span class="preview-label">{{ 'table.id' | trans }}:  </span>
            <span class="preview-value">{{ textblock.uuid }}</span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'preview.created_at' | trans }}:  </span>
            <span class="preview-value">{{ textblock.createdAt ? textblock.createdAt|date('d-m-Y H:i:s') : '' }}</span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'preview.updated_at' | trans }}:  </span>
            <span class="preview-value">{{ textblock.updatedAt ? textblock.updatedAt|date('d-m-Y H:i:s') : '' }}</span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'preview.created_by' | trans }}:  </span>
            <span class="preview-value">{{ textblock.createdBy }}</span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'preview.updated_by' | trans }}:  </span>
            <span class="preview-value">{{ textblock.updatedBy }}</span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'textblock.blockKey' | trans }}:  </span>
            <span class="preview-value">{{ textblock.blockKey }}</span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'textblock.is_active' | trans }}:  </span>
            <span class="preview-value">
                {% if textblock.isActive %}{{ 'table.true' | trans }}{% else %}{{ 'table.false' | trans }}{% endif %}
            </span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'preview.description' | trans }}:  </span>
            <span class="preview-value">{{ textblock.description }}</span>
        </div>
        <div class="preview-row">
            <span class="preview-label">{{ 'textblock.content' | trans }}:  </span>
            <span class="preview-value">{{ textblock.content }}</span>
        </div>
        <div>
            <a href="{{app.request.headers.get('referer')}}" class="return-btn"><i class="fa fa-arrow-left" ></i>&nbsp{{ 'return' | trans }}</a>
            {# <a href="{{ path('web_page_edit', {'uuid': textblock.uuid}) }}" class="edit-btn"><i class="fa fa-pencil" ></i>&nbsp{{ 'edit' | trans }}</a> #}
        </div>
    </div>
{% endblock %}
